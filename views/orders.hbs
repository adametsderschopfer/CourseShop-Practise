<h1>My orders</h1>

{{#if orders.length}}

{{#each orders}}
<div class="row">
  <div class="col s5 offset-s3">
    <div class="card">
      <div class="card-content">

        <span class="card-title">
          Order <small>{{_id}}</small>
        </span>
        <p>
          <b>
            <em>
              {{user.userId.name}}
            </em>
          </b>
          ({{user.userId.email}})
        </p>

        <p class="date">
          {{date}}
        </p>

        <ol>
          {{#each courses}}
          <li>
            {{course.title}} (x<strong>{{count}}</strong>)
          </li>
          {{/each}}
        </ol>

        <hr>
        <p>Price: <span class="price"> {{price}}</span></p>
      </div>
    </div>
  </div>
</div>
{{/each}}

{{else}}

<p>No orders yet</p>

{{/if}}